<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D4E0F9"
        tools:context=".UI.Activity.AssessmentsAddActivity">

    <EditText
            android:id="@+id/addAssessmentType"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="Objective"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.802" android:layout_marginBottom="196dp"></EditText>
    <TextView
            android:text="Title"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="77dp"
            android:layout_height="39dp" android:id="@+id/tvAssessmentTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.071"
            android:layout_marginBottom="444dp"/>
    <EditText
            android:id="@+id/addAssessmentGoalStart"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="01/20/2022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.815" android:layout_marginBottom="364dp"></EditText>
    <EditText
            android:id="@+id/addAssessmentGoalEnd"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="01/20/2022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.802" android:layout_marginBottom="276dp"></EditText>
    <TextView
            android:text="Start Date"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvAssessmentGoalStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.08"
            android:layout_marginBottom="360dp"/>
    <TextView
            android:text="End Date"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvAssessmentGoalEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.08"
            android:layout_marginBottom="276dp"/>
    <EditText
            android:id="@+id/addAssessmentTitle"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="Assessment 1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.815" android:layout_marginBottom="444dp"></EditText>
    <TextView
            android:text="Type"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="122dp"
            android:layout_height="44dp" android:id="@+id/tvAssessmentType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.086" android:layout_marginBottom="196dp"/>
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMain"
            app:titleTextColor="#FFFF"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_header"
            app:layout_anchorGravity="center" tools:ignore="MissingConstraints"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonEdit"
            android:layout_width="52dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:onClick="saveNewAssessment"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_check"
            app:layout_constraintHorizontal_bias="0.651"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/addAssessmentTitle"
            app:backgroundTint="@color/ic_launcher_background" app:layout_constraintVertical_bias="0.813"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonCancel"
            android:layout_width="52dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:onClick="cancelNewAssessment"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_cancel"
            app:layout_constraintHorizontal_bias="0.919"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/addAssessmentTitle"
            app:backgroundTint="@color/ic_launcher_background" app:layout_constraintVertical_bias="0.805"/>


</androidx.constraintlayout.widget.ConstraintLayout>