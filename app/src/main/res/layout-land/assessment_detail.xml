<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D4E0F9"
        tools:context=".UI.Activity.AssessmentsDetailActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMain"
            app:theme="@style/MyToolbarStyle"
            app:titleTextColor="#FFFF"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_header"
            app:layout_anchorGravity="center" tools:ignore="MissingConstraints"/>

    <TextView
            android:text="Type"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="122dp"
            android:layout_height="44dp" android:id="@+id/tvAssessmentTypeDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.075" android:layout_marginBottom="24dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonCancel"
            android:layout_width="67dp"
            android:layout_height="59dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:onClick="deleteAssessment"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_delete"
            app:rippleColor="#00FFFFFF" app:backgroundTint="@color/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.105" app:layout_constraintBottom_toBottomOf="parent"
    />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonEdit"
            android:layout_width="57dp"
            android:layout_height="63dp"
            android:clickable="true"
            android:onClick="updateAssessment"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:rippleColor="#00FFFFFF"
            app:backgroundTint="@color/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.112"/>
    <TextView
            android:text="Title"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="77dp"
            android:layout_height="39dp" android:id="@+id/tvAssessmentTitleDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.068"
            android:layout_marginBottom="256dp"/>
    <TextView
            android:text="Start Date"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvAssessmentGoalStartDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.074"
            android:layout_marginBottom="188dp"/>
    <TextView
            android:text="End Date"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvAssessmentGoalEndDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.072"
            android:layout_marginBottom="112dp"/>
    <EditText
            android:id="@+id/editAssessmentGoalStart"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="01/20/2022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.887" android:layout_marginBottom="176dp"></EditText>
    <EditText
            android:id="@+id/editAssessmentType"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="Objective"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.887" android:layout_marginBottom="24dp"></EditText>
    <EditText
            android:id="@+id/editAssessmentGoalEnd"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="01/20/2022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.887" android:layout_marginBottom="96dp"></EditText>
    <EditText
            android:id="@+id/editAssessmentTitle"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="Assessment 1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.887" android:layout_marginBottom="252dp"></EditText>

</androidx.constraintlayout.widget.ConstraintLayout>