<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D4E0F9"
        tools:context=".UI.Activity.MentorsListActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMain"
            app:theme="@style/MyToolbarStyle"
            app:titleTextColor="#FFFF"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_header"
            app:layout_anchorGravity="center" tools:ignore="MissingConstraints"/>

    <TextView
            android:text="Email"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="122dp"
            android:layout_height="44dp" android:id="@+id/tvMentorEmailLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.152" android:layout_marginBottom="28dp"/>
    <TextView
            android:text="Phone"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvMentorPhoneLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.14"
            android:layout_marginBottom="108dp"/>
    <TextView
            android:text="Name"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="77dp"
            android:layout_height="39dp" android:id="@+id/tvMentorNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.142"
            android:layout_marginBottom="168dp"/>
    <TextView
            android:id="@+id/tvMentorEmailDetail"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="198dp"
            android:layout_height="53dp"
            android:hint="test@cloud.com"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.793" android:layout_marginBottom="20dp"></TextView>
    <TextView
            android:id="@+id/tvMentorPhoneDetail"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="123-123-1234"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.764" android:layout_marginBottom="88dp"></TextView>
    <TextView
            android:id="@+id/tvMentorNameDetail"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="141dp"
            android:layout_height="53dp"
            android:hint="John Doe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.716" android:layout_marginBottom="156dp"></TextView>
    <ImageView
            android:layout_width="251dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="149dp" app:srcCompat="@drawable/ic_outline_rectangle"
            android:id="@+id/imageView2" app:layout_constraintHorizontal_bias="0.425"
            android:layout_marginBottom="184dp"/>
    <ImageView
            android:layout_width="140dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="93dp" app:srcCompat="@drawable/ic_mentor" android:id="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.443" android:layout_marginBottom="208dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>