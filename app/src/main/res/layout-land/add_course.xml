<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D4E0F9"
        tools:context=".UI.Activity.CoursesAddActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMain"
            app:titleTextColor="#FFFF"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_header"
            app:layout_anchorGravity="center" tools:ignore="MissingConstraints"/>

    <TextView
            android:text="Course"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvCourseLabel"
            app:layout_constraintHorizontal_bias="0.178"
            app:layout_constraintTop_toBottomOf="@+id/toolbarMain" android:layout_marginTop="8dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonEdit"
            android:layout_width="52dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="saveNewCourse"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_check"
            app:backgroundTint="@color/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.768"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/addNoteMessage"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonCancel"
            android:layout_width="52dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:onClick="cancelNewCourse"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_cancel"
            app:layout_constraintHorizontal_bias="0.958"
            app:backgroundTint="@color/ic_launcher_background" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/addNoteMessage"/>
    <TextView
            android:text="Status"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="133dp"
            android:layout_height="43dp" android:id="@+id/tvCourseAddStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.026" android:layout_marginBottom="32dp"/>
    <TextView
            android:text="End Date"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="122dp"
            android:layout_height="44dp" android:id="@+id/tvCourseEndAdd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.021" android:layout_marginBottom="104dp"/>
    <TextView
            android:text="Start Date"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvCourseStartAdd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.021"
            android:layout_marginBottom="184dp"/>
    <EditText
            android:id="@+id/addCourseEndDate"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="48dp"
            android:hint="06/01/2022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.367" android:layout_marginBottom="100dp"></EditText>
    <EditText
            android:id="@+id/addCourseTitle"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="178dp"
            android:layout_height="48dp"
            android:hint="Course 1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.367" android:layout_marginBottom="240dp"
    ></EditText>
    <EditText
            android:id="@+id/addCourseStartDate"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="48dp"
            android:hint="01/20/2022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.367" android:layout_marginBottom="172dp"></EditText>

    <EditText
            android:id="@+id/addCourseStatus"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="46dp"
            android:hint="In Progress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.367" android:layout_marginBottom="28dp"></EditText>
    <TextView
            android:text="Title"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="77dp"
            android:layout_height="39dp" android:id="@+id/tvCourseTitleAdd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.024"
            android:layout_marginBottom="240dp"
    />
    <EditText
            android:id="@+id/addNoteTitle"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="141dp"
            android:layout_height="53dp"
            android:hint="Note 1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.972" android:layout_marginBottom="224dp"></EditText>
    <TextView
            android:text="Title"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="77dp"
            android:layout_height="39dp" android:id="@+id/tvAddNoteTitleLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.629"
            android:layout_marginBottom="236dp"/>
    <TextView
            android:text="Note"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvNoteLabel"
            app:layout_constraintHorizontal_bias="0.777"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/toolbarMain"/>
    <TextView
            android:text="Message"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="110dp"
            android:layout_height="39dp" android:id="@+id/tvAddNoteMessageLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.663"
            android:layout_marginBottom="152dp"/>
    <EditText
            android:id="@+id/addNoteMessage"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="141dp"
            android:layout_height="53dp"
            android:hint="Sample"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.972" android:layout_marginBottom="148dp"></EditText>
    <View
            android:id="@+id/divider5"
            android:layout_width="1dp"
            android:layout_height="370dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteY="48dp" tools:layout_editor_absoluteX="397dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>