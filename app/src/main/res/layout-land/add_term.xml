<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D4E0F9"
        tools:context=".UI.Activity.TermsAddActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMain"
            app:titleTextColor="#FFFF"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_header"
            app:layout_anchorGravity="center" tools:ignore="MissingConstraints"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonEdit"
            android:layout_width="52dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="saveNewTerm"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_check"
            app:backgroundTint="@color/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.77" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarMain"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonCancel"
            android:layout_width="52dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:onClick="cancelNewTerm"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_cancel"
            app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintTop_toBottomOf="@+id/toolbarMain" android:layout_marginTop="20dp"
            app:backgroundTint="@color/ic_launcher_background"/>

    <TextView
            android:text="End Date"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="122dp"
            android:layout_height="44dp" android:id="@+id/tvCouseEndAdd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.073" android:layout_marginBottom="32dp"/>
    <EditText
            android:id="@+id/addTermStartDate"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="01/20/2022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.808" android:layout_marginBottom="112dp"></EditText>
    <TextView
            android:text="Start Date"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvCourseStartAdd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.072"
            android:layout_marginBottom="124dp"/>
    <EditText
            android:id="@+id/addTermTitle"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="Term 1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.808" android:layout_marginBottom="200dp"></EditText>
    <TextView
            android:text="Title"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="77dp"
            android:layout_height="39dp" android:id="@+id/tvCourseTitleAdd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.065"
            android:layout_marginBottom="208dp"/>
    <EditText
            android:id="@+id/addTermEndDate"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="178dp"
            android:layout_height="53dp"
            android:hint="06/01/2022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.808" android:layout_marginBottom="24dp"></EditText>


</androidx.constraintlayout.widget.ConstraintLayout>